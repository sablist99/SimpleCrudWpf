<Window x:Class="WpfFrontCore.View.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ошибка" Height="200" Width="400">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="ErrorTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="10"/>
        <Button Content="Закрыть" HorizontalAlignment="Center" Width="100" Margin="10" Click="CloseButton_Click"/>
    </StackPanel>
</Window>
